    <select id="selectHotProductCarousel" resultMap="CarouselItems">
    select gid, image
    from goods
    where goods.recommend = 2
    order by gid desc limit 5
  </select>
    <select id="getGoodsList" resultMap="GoodsListResult">
        select sum(`order`.count) as salecount, goods.gid, goods.name, goods.price, goods.description, goods.image
        from goods, navigation as nav, `order`
        <where>
            <choose>
                <when test="typeName eq 'all'">
                    goods.gid = `order`.gid
                </when>
                <otherwise>
                    nav.type = #{typeName} and nav.nid = goods.nid and goods.gid = `order`.gid
                </otherwise>
            </choose>
            <if test="keyword != null">
                and (goods.name like CONCAT('%',#{keyword},'%') or goods.description like CONCAT('%',#{keyword},'%'))
            </if>
        </where>
        group by `order`.gid
        <choose>
            <when test="orderby eq 'salecount'">
                order by salecount desc;
            </when>
            <when test="orderby eq 'price'">
                order by goods.price desc
            </when>
            <otherwise>
                order by goods.gid
            </otherwise>
        </choose>
    </select>

    <select id="getGoodDetail" resultMap="GoodsDetailResult">
    select goods.gid as gid,goods.name as name,goods.price as price,goods.description as description,
        goods.image as image, goods.count-sales.count as rest, sales.count as count,goods.display_time
    from
    (select *
        from seckill.goods
        where gid=#{gid})as goods
    left join
    (select (case when gid is null then #{gid} else gid end)as gid,(case when sum(count) is null then 0 else sum(count) end)as count
        from seckill.order
        where gid =#{gid})as sales
    on goods.gid=sales.gid
    </select>
    <!--每个类型下的商品最多5个-->
    <select id="searchGoodsForIndex" resultMap="SearchGoodsForIndex">
        select good.gid, good.name as `names`, good.price, good.image, good.description, nav.type, nav.name
        from
            (select gid, `name`, price, description, image, nid
                from goods
                <where>
                    <if test="keyword != null">
                        `name` like CONCAT('%',#{keyword},'%') or description like CONCAT('%',#{keyword},'%')
                    </if>
                </where>
            ) as good, navigation as nav
        where nav.nid = good.nid
    </select>
    <select id="getGoodsIndexTips" resultType="java.lang.String">
        select `name` from goods
        <where>
            <if test="keyword != null">
                `name` like CONCAT('%',#{keyword},'%')
            </if>
        </where>
